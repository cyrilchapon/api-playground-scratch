    "prisma": "^4.3.1",
    "ts-node": "^10.9.1",
    "zod": "^3.19.1",
    "zod-express-middleware": "^1.4.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/node": "^18.7.18",
    "dotenv": "^16.0.2",
    "nodemon": "^2.0.20",
    "typescript": "^4.8.3"
  }
