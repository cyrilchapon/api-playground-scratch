{
  "name": "api",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/index",
    "dev": "nodemon src/index.ts",
    "generate": "prisma generate",
    "docgen": "yarn docgen:source && yarn docgen:build",
    "docgen:source": "ts-node src/doc/generate.ts",
    "docgen:build": "redoc-cli build static/openapi.yml --output static/index.html",
    "db:reset": "prisma migrate reset",
    "db:migrate": "prisma migrate deploy",
    "db:migration:up": "prisma migrate dev --create-only --name",
    "db:migration:down": "prisma migrate diff --from-schema-datamodel prisma/schema.prisma --to-schema-datasource prisma/schema.prisma --script > down.sql"
  },
  "dependencies": {
    "@anatine/zod-openapi": "^1.9.8",
    "@hapi/boom": "^10.0.0",
    "@prisma/client": "^4.3.1",
    "cors": "^2.8.5",
    "envalid": "^7.3.1",
    "express": "^4.18.1",
    "openapi3-ts": "^3.0.2",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "prisma": "^4.3.1",
    "redoc-cli": "^0.13.20",
    "swagger-ui-express": "^4.5.0",
    "ts-deepmerge": "^4.0.0",
    "ts-node": "^10.9.1",
    "yaml": "^2.1.1",
    "zod": "^3.19.1",
    "zod-express-middleware": "^1.4.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/node": "^18.7.18",
    "@types/swagger-ui-express": "^4.1.3",
    "dotenv": "^16.0.2",
    "nodemon": "^2.0.20",
    "typescript": "^4.8.3"
  }
}
